{
  "extends": ["@commitlint/config-conventional", "gitmoji"],
  "rules": {
    "header-case": [
      2,
      "always",
      ["sentence-case"]
    ],
    "type-enum": [
			2,
			"always",
			[
				"Create",
				"Update",
				"Implement",
				"Fix",
				"Optimize",
				"Refactor",
				"Revert",
				"Enhance",
				"Test",
				"Breaking",
        		"Initial"
			]
		]
  }
}
